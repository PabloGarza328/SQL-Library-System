<h1>Library Members information</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each members.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, fname, lname, homeworld and age }}
        {{#each members}}
        <tr>
            <td>{{this.memberID}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.phoneNumber}}</td>
            <td>{{this.email}}</td>
            
            
            {{! DELETE form }}
            <form id='delete_person_form' method='POST' action='/members/delete'>
                <input type='hidden' name='delete_person_id' value='{{this.memberID}}' />
                <input type='hidden' name='delete_person_name' value='{{this.firstName}} {{this.lastName}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>


{{! CREATE form }}
<h2>Create a Member</h2>
<form class='cuForm' id='create_member_form' method='POST' action='/members/create'>
 <label for='create_member_fname'>First Name:</label>
  <input type='text' name='firstName' id='create_member_fname' required />

 <label for='create_member_lname'>Last Name:</label>
  <input type='text' name='lastName' id='create_member_lname' required />

  <label for='create_member_phone'>Phone Number:</label>
  <input type='text' name='phoneNumber' id='create_member_phone' required />

  <label for='create_member_email'>Email:</label>
 <input type='email' name='email' id='create_member_email' required />

  <input type='submit' value='Create Member' />
</form>
 

{{! UPDATE form }}
<h2>Update a Member</h2>
<form class='cuForm' id='update_member_form' method='POST' action='/members/update'>
 <label for='update_member_id'>Select Member:</label>
 <select name='memberID' id='update_member_id' required>
 <option value='' disabled selected>Select a Member</option>
 {{#each members}}
  <option value='{{this.memberID}}'>
  {{this.memberID}} - {{this.firstName}} {{this.lastName}}
  </option>
  {{/each}}
 </select>

  <label for='update_member_phone'>New Phone Number:</label>
  <input type='text' name='phoneNumber' id='update_member_phone' />

  <label for='update_member_email'>New Email:</label>
  <input type='email' name='email' id='update_member_email' />

  <input type='submit' value='Update Member' />
</form>
